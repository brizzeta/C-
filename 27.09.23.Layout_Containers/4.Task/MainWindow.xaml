<Window x:Class="_4.Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4.Task"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" MinHeight="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5, 2"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>

        <WrapPanel DockPanel.Dock="Top">
            <Button>Create</Button>
            <Button>Edit</Button>
            <Button>Delete</Button>
            <Button>Save</Button>
            <Button>Save As..</Button>
            <Button>Open</Button>
            <Button>Exit</Button>
            <Button>End session</Button>
        </WrapPanel>

        <UniformGrid Columns="2" Rows="1" Margin="5">
            <StackPanel>
                <Button>Mail</Button>
                <Button>Calendar</Button>
                <Button>Tasks</Button>
                <Button>Magazine</Button>
                <Button>Mail</Button>
            </StackPanel>

            <TextBox></TextBox>
        </UniformGrid>
        
    </DockPanel>
</Window>
